               <!--enableSelectByExample="true"-->
               <!--enableUpdateByExample="true" domainObjectName="GoodsCategory">-->
        <!--</table>-->
        <!--<table tableName="t_goods_desc" enableCountByExample="true" enableDeleteByExample="true"-->
               <!--enableSelectByExample="true"-->
               <!--enableUpdateByExample="true" domainObjectName="GoodsDesc">-->
        <!--</table>-->
        <!--<table tableName="t_order" enableCountByExample="true" enableDeleteByExample="true"-->
               <!--enableSelectByExample="true"-->
               <!--enableUpdateByExample="true" domainObjectName="Order">-->
        <!--</table>-->
        <table tableName="t_order_item" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true"
               enableUpdateByExample="true" domainObjectName="OrderItem">
        </table>

    </context>
</generatorConfiguration>